package com.spring.boot;
import java.util.List;

import javax.sql.DataSource;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.jdbc.core.BeanPropertyRowMapper;
import org.springframework.jdbc.core.JdbcTemplate;
import org.springframework.stereotype.Service;

import java.sql.Connection;

@Service
public class SignupService {
	
	@Autowired
	private DataSource dataSource;
	
	public SignupDTO findByEmail(String email) {
		JdbcTemplate jdbcTemplate = new JdbcTemplate(dataSource);
		String fecthData = "select first_name, last_name, password , email from user where email = ?";
		List<SignupDTO> signupDTOs=jdbcTemplate.query(fecthData,new Object[] {email}, new BeanPropertyRowMapper(SignupDTO.class));
		return signupDTOs.get(0);
	}
	
	public List<SignupDTO> findAll() {
		JdbcTemplate jdbcTemplate = new JdbcTemplate(dataSource);
		String fecthData = "select first_name, last_name, password, email from user";
		List<SignupDTO> signupDTOs=jdbcTemplate.query(fecthData, new BeanPropertyRowMapper(SignupDTO.class));
		return signupDTOs;
	}

	public void save(SignupDTO signupDTO) {
		// jdbcTemplate says I will make your jdbc programming super duper easy
		JdbcTemplate jdbcTemplate = new JdbcTemplate(dataSource);
		String sql = "insert into signups_tbl(first_name, last_name, password, email) values(?,?,?,?)";
		Object[] data = { signupDTO.getFirst_name(), signupDTO.getLast_name(), signupDTO.getPassword(),
				signupDTO.getEmail() };
		jdbcTemplate.update(sql, data);
	}
	
	public void delete(SignupDTO signupDTO) {
		// jdbcTemplate says I will make your jdbc programming super duper easy
		JdbcTemplate jdbcTemplate = new JdbcTemplate(dataSource);
		String sql = "delete from signups_tbl where email= ?";
		
		Object[] data = { signupDTO.getEmail() };
		jdbcTemplate.update(sql, data);
	}
	
	public void update(SignupDTO signupDTO) {
		// jdbcTemplate says I will make your jdbc programming super duper easy
		JdbcTemplate jdbcTemplate = new JdbcTemplate(dataSource);
		String sql = "update signups_tbl set password =?, first_name=? ,last_name= ? where email = ?";
		Object[] data = { signupDTO.getPassword(), signupDTO.getFirst_name(),
				signupDTO.getLast_name(),signupDTO.getEmail() };
		jdbcTemplate.update(sql, data);
	}

}
