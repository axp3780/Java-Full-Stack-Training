package com.spring.boot;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;
import java.util.List;

import javax.servlet.http.HttpServletRequest;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestParam;

@Controller
//WecomeController is bean or not?? yes
public class SignupController {
	//@Autowired - it pull bean here - >> it is used to inject one bean inside another bean
	@Autowired
	private SignupService  signupService;

	@GetMapping("/login")
	public String showLogin() {
		return "login"; // login.jsp
	}

	@GetMapping("/signup")
	public String showSignup() {
		return "signup"; // signup.jsp
	}

	@PostMapping("/signup")
	public String postCreate(@ModelAttribute SignupDTO signupDTO, Model model) {
		signupService.save(signupDTO);
		// JDBC PROGRAMMING
		model.addAttribute("message", "Hey profile is created successfully");
		return "signup"; // signup.jsp
	}

	@GetMapping("/showSignups")
	public String showSignups() {
		List<SignupDTO>   dtos=signupService.findAll();
		DataStore.getSignupDTOs().addAll(dtos);
		return "showsignup"; // showSignups.jsp
	}
	
	@PostMapping("/deleteData")
	public String deleteData(@ModelAttribute SignupDTO signupDTO, Model model) {
		signupService.delete(signupDTO);
		// JDBC PROGRAMMING
		model.addAttribute("message", "Hey one signup is deleted successfully");
		return "showsignup"; // signup.jsp
	}
	
	@GetMapping("/editData")
	public String showEditSignup(@RequestParam String email, Model model) {
	    SignupDTO signupDTO=signupService.findByEmail(email);
	    model.addAttribute("signupDTO", signupDTO);
	    return "esignup"; // esignup.jsp
	}
	
	@PostMapping("/updateSignup")
	public String updateSignupPost(@ModelAttribute SignupDTO signupDTO, Model model) {
		signupService.update(signupDTO);
		List<SignupDTO>   dtos=signupService.findAll();
		DataStore.getSignupDTOs().addAll(dtos);
		return "showsignup"; // showSignups.jsp
	}
}
